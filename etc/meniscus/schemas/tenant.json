{
    "id": "http://projectmeniscus.org/json/tenant#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Tenant API schema",

    "type": "object",
    "additionalProperties": false,

    "properties": {
        "tenant": {
            "$ref": "#/definitions/tenant"
        },
        "host": {
            "$ref": "#/definitions/host"
        },
        "profile": {
            "$ref": "#/definitions/profile"
        },
        "event_producer": {
            "$ref": "#/definitions/event_producer"
        },
        "token": {
            "$ref": "#/definitions/token"
        }
    },

    "oneOf": [
        { "required": ["tenant"] },
        { "required": ["host"] },
        { "required": ["profile"] },
        { "required": ["event_producer"] },
        { "required": ["token"] }
    ],

    "definitions": {
        "tenant": {
            "required": ["tenant_id"],
            "additionalProperties": false,

            "properties": {
                "tenant_id": {
                	"type": "string",
                    "minLength": 1
                },
                "hosts": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/host" }
                },
                "profiles": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/profile" }
                },
                "event_producers": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/event_producer" }
                },
                "token": {
                    "$ref": "#/definitions/token"
                }
            }
        },

        "host": {
            "required": ["hostname"],
            "additionalProperties": false,

            "properties": {
                "id": {
                    "type": "number"
                },
                "hostname": {
                    "type": "string",
                    "minLength": 1
                },
                "ip_address_v4": {
                    "type": "string"
                },
                "ip_address_v6": {
                    "type": "string"
                },
                "profile_id": {
                    "type": "number"
                }
            }
        },

        "profile": {
            "required": ["name"],
            "additionalProperties": false,

            "properties": {
                "id": {
                    "type": "number"
                },
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "event_producer_ids": {
                    "type": "array",
                    "items": { "type": "number" }
                }
            }
        },

        "event_producer": {
            "required": ["name", "pattern"],
            "additionalProperties": false,

            "properties": {
                "id": {
                    "type": "number"
                },
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "pattern": {
                    "type": "string",
                    "minLength": 1
                },
                "durable": {
                    "type": "boolean"
                },
                "encrypted": {
                    "type": "boolean"
                }
            }
        },

        "token": {
            "required": ["invalidate_now"],
            "additionalProperties": false,

            "properties": {
                "invalidate_now": {
                    "type": "boolean"
                }
            }
        }
    }
}
