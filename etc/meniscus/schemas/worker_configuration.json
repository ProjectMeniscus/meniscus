{
    "id": "http://projectmeniscus.org/json/worker_configuration#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Worker Configuration Schema",

    "type": "object",
    "additionalProperties": false,

    "properties": {
        "personality":  {
            "enum": ["coordinator", "worker", "dispatcher", "tenant"]
        },
        "personality_module": {
            "type": "string"
        },
        "worker_token": {
            "type": "string"
        },
        "worker_id": {
            "type": "string"
        },
        "coordinators": {
            "type": "array",
            "items": { "type": "string" }
        }
    }
}