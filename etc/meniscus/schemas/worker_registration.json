{
    "id": "http://projectmeniscus.org/json/worker_registration#",
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "worker_registration Schema",
    "type": "object",
    "additionalProperties": false,

    "properties": {
        "worker_registration": {"$ref": "#/definitions/worker_registration"}
    },

    "oneOf": [
        {"required": ["worker_registration"]}
    ],

    "definitions": {

        "worker_registration": {

            "required": [
                "hostname",
                "ip_address_v4",
                "ip_address_v6",
                "personality",
                "status",
                "system_info"
            ],

            "additionalProperties": false,

            "properties": {

                "hostname": {
                    "type": "string"
                },
                "ip_address_v4": {
                    "type": "string",
                    "format": "ipv4"
                },
                "ip_address_v6": {
                    "type": "string"
                },
                "personality": {
                    "enum": [
                        "coordinator",
                        "worker",
                        "dispatcher",
                        "tenant"
                    ]
                },
                "status": {
                    "enum": [
                        "new",
                        "online",
                        "offline",
                        "draining"
                    ]
                },
                "system_info": {
                    "$ref": "#/definitions/system_info"
                }
            }
        },
        "system_info": {
            "required": [
                "os_type",
                "memory_mb",
                "architecture",
                "cpu_cores",
                "timestamp"
            ],
            "additionalProperties": false,

            "properties":{
                "os_type": {
                    "type": "string"
                },
                "memory_mb": {
                    "type": "integer"
                },
                "architecture": {
                    "type": "string"
                },
                "cpu_cores": {
                    "type": "integer"
                },
                "disk_usage": {
                    "$ref": "#/definitions/disk_usage"
                },
                "load_average": {
                    "$ref": "#/definitions/load_average"
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "load_average": {
            "required": ["1","5","15"],
            "additionalProperties": false,

            "properties":{
                "1": {
                    "type": "number"
                },
                "5": {
                    "type": "number"
                },
                "15": {
                    "type": "number"
                }
            }
        },
        "disk_usage": {
            "type": "array",
            "items": { "$ref": "#/definitions/device" }
        },
        "device":{
            "required": ["device", "total", "used"],
            "additionalProperties": false,

            "properties": {
                "device": {
                    "type": "string"
                },
                "total": {
                    "type": "number"
                },
                "used": {
                    "type": "number"
                }
            }


        }
    }
}
