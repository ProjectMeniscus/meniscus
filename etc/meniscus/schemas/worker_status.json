{
    "id": "http://projectmeniscus.org/json/worker_status#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Worker Status Schema",
    "type": "object",
    "additionalProperties": false,

    "properties": {
        "worker_status": {
            "$ref": "#/definitions/worker_status"
        }
    },

    "oneOf": [
         {"required": ["worker_status"]}
    ],

    "definitions": {

        "worker_status": {
            "required": ["system_info", "status", "hostname"],
            "additionalProperties": false,

            "properties": {
                "status": {"$ref": "#/definitions/status"},
                "system_info": {"$ref": "#/definitions/system_info"},
                "hostname": {"$ref": "#/definitions/hostname"}
            }
        },

        "system_info": {
            "required": [
                "os_type",
                "memory_mb",
                "architecture",
                "cpu_cores",
                "load_average",
                "disk_usage",
                "timestamp"
            ],
            "additionalProperties": false,

            "properties":{
                "os_type": {
                    "type": "string"
                },
                "memory_mb": {
                    "type": "integer"
                },
                "architecture": {
                    "type": "string"
                },
                "cpu_cores": {
                    "type": "integer"
                },
                "disk_usage": {
                    "$ref": "#/definitions/disk_usage"
                },
                "load_average": {
                    "$ref": "#/definitions/load_average"
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "load_average": {
            "required": ["1","5","15"],
            "additionalProperties": false,

            "properties":{
                "1": {
                    "type": "number",
                    "minimum": 0
                },
                "5": {
                    "type": "number",
                    "minimum": 0
                },
                "15": {
                    "type": "number",
                    "minimum": 0
                }
            }
        },
        "disk_usage": {
            "type": "array",
            "items": { "$ref": "#/definitions/device" }
        },
        "device":{
            "required": ["device", "total", "used"],
            "additionalProperties": false,

            "properties": {
                "device": {
                    "type": "string"
                },
                "total": {
                    "type": "number"
                },
                "used": {
                    "type": "number"
                }
            }
        },
        "status": {
            "enum": [
                "new",
                "online",
                "offline",
                "draining"
            ]
        },
        "hostname": {
            "type": "string"
        }
    }
}